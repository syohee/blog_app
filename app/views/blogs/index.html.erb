<div class="container">
  <h1>Blogs</h1>

    
    <% @blog.each do |blog| %>
    
    <div class="blog_box col-md-6">
      <ul class="row">
        <li class="col-md-1 col-xs-1 workbreak"><%= blog.title %></li>
        <li class="col-md-5 col-xs-3 workbreak"><%= blog.content %></li>
        <li class="col-md-1 col-xs-1 workbreak"><%= blog.user.name %></li>
        <li class="col-md-1 col-xs-2"><%= link_to 'show', blog_path(blog.id), class: 'button' %></li>
        <% if defined?(current_user.id) %>
          <% if blog.user_id == current_user.id %>
            <li class="col-md-1 col-xs-2"><%= link_to 'edit', edit_blog_path(blog.id), class: 'button' %></li>
            <li class="col-md-1 col-xs-2"><%= link_to 'delete', blog_path(blog.id), method: :delete, class: 'button' %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
    <% end %>
    <ul class="row">
      <li class="col-md-12 col-xs-12"><%= link_to 'new', new_blog_path, class: 'button' %></li>
    </ul>
    
  
</div>
